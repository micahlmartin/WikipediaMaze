</script>

</div>

<div class="board-wrap">
    <ul id="top-themes" class="board">
    <li>
        <h2>Top Themes</h2>              
        <ul>
            @foreach (var theme in Model.TopThemes)
            {
                <li>@Html.ActionLink(theme.Name, "themed", new { controller = "puzzles", themes = theme.Name }) <span>@theme.Count</span></li>   
            }
            </ul>
        </li>
        <li class="view-all">@Html.ActionLink("View All Themes", "Themes", "puzzles")</li>
    </ul>
</div>

<div class="ads">
