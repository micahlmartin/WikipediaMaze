@using WikipediaMaze.App
@using WikipediaMaze.Core

@model WikipediaMaze.Controllers.SubControllers.SidebarViewModel

<div class="board-wrap">
    <ul id="leaders" class="board">
    <li>
        <h2>Leaders</h2>              
        <ul>
            @foreach (var user in Model.TopUsers)
            {
            <li>@Html.ActionLink(user.DisplayName, "display", new { controller = "Players", id = user.Id, userName = user.DisplayName.FormatTitleForUrl() })
            <span>@user.Reputation.FormatInteger()</span></li>
            }
        </ul>
    </li>
    <li class="view-all">@Html.ActionLink("View All Rankings", "Index", "Players")</li>
    </ul>
</div>
<div class="ads">
    <h3>Sponsors</h3>

