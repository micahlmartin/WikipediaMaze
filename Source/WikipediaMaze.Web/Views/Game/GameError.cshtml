@model HandleErrorInfo
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Error.cshtml";
}

@section SectionTitle
{
    <h2>An Error Occurred</h2>
}

<p>
    @Model.Exception.Message
</p>
<p>
    If you you're looking for something that you think should exist, please <a href="mailto:support@wikipediamaze.com" title="Support Email Address">let us know</a>.
    If you were in the middle of solving a puzzle, just hit the back button and choose a different topic.
</p>
<p>
    <em>Wikipedia Maze</em> is still in beta and we're working hard at finding and fixing bugs.
    Thank you for your patience.
</p>

